<%- include('../partials/hero') %>

<div class="max-w-4xl mx-auto px-4 py-12">
    <div class="grid md:grid-cols-2 gap-8">
        <% if (posts && posts.length > 0) { %>
            <% posts.forEach(post => { %>
                <article class="group bg-white rounded-xl overflow-hidden shadow-sm hover:shadow-md transition-shadow duration-200">
                    <a href="/posts/<%= post.slug %>" class="block">
                        <% if (post.images && post.images.length > 0) { %>
                            <div class="aspect-w-16 aspect-h-9 overflow-hidden">
                                <img src="<%= post.images[0] %>" 
                                     alt=""
                                     class="object-cover w-full h-48 transform group-hover:scale-105 transition-transform duration-300">
                            </div>
                        <% } %>
                        
                        <div class="p-6">
                            <time class="text-sm text-gray-500 mb-2 block">
                                <%= new Date(post.createdAt).toLocaleDateString('en-US', { 
                                    year: 'numeric', 
                                    month: 'long', 
                                    day: 'numeric' 
                                }) %>
                            </time>
                            
                            <h2 class="text-xl font-semibold text-gray-900 group-hover:text-blue-600 transition-colors mb-3">
                                <%= post.title %>
                            </h2>
                            
                            <p class="text-gray-600">
                                <%= post.preview %>
                            </p>
                        </div>
                    </a>
                </article>
            <% }); %>
        <% } else { %>
            <div class="col-span-2 text-center py-12 bg-white rounded-xl shadow-sm">
                <p class="text-gray-500">No posts yet.</p>
            </div>
        <% } %>
    </div>
</div>
